@model YouthGovence.RegistrationModel
@{ 
    ViewBag.Title = "Registration";
    List<SelectListItem> GenderType = new List<SelectListItem>();
    var Genderdata = new[]{
                 new SelectListItem{ Value="Male",Text="Male"},
                 new SelectListItem{ Value="Female",Text="Female"},
                 new SelectListItem{ Value="Other",Text="Other"}
             };
    GenderType = Genderdata.ToList();
}
@section Styles {
    <style>
        .contact-form form select {
            width: 100%;
            height: 48px;
            border-radius: 2px;
            background: #2d2d2d;
            border: none;
            padding-left: 20px;
            margin-bottom: 30px;
            font-size: 16px;
            color: #a6a6a6;
            -webkit-transition: all 0.3s;
            -webkit-transition: 0.3s;
            -o-transition: 0.3s;
            transition: 0.3s;
            border: 1px solid #131313;
        }
    </style>
}

<!-- Map Section End -->
<section class="breadcrumb-section set-bg spad" data-setbg="/Image/about-bread2.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>REGISTRATION</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section Begin -->
<section class="contact-section spad">
    <div class="col-lg-10 offset-lg-1">
        <div class="contact-form">
            <h4><center>REGISTRATION</center></h4>
            @ViewBag.Error
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-lg-6">
                @Html.EditorFor(model => model.FName, new { htmlAttributes = new { @placeholder = "First Name" } })
                @Html.ValidationMessageFor(model => model.FName, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-6">
                @Html.EditorFor(model => model.SName, new { htmlAttributes = new { @placeholder = "Last Name" } })
                @Html.ValidationMessageFor(model => model.SName, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-6">
                @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @placeholder = "Date of Birth" } })
                @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-6">
                @Html.DropDownList("Sex", GenderType, "** Select Gender **", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-12">
                @Html.EditorFor(model => model.ClgAdmistnNo, new { htmlAttributes = new { @placeholder = "College Admistion No" } })
                @Html.ValidationMessageFor(model => model.ClgAdmistnNo, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-12">
                @Html.DropDownListFor(model => model.ColID, null, "** Select College **", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ColID, "", new { @class = "text-danger" })
            </div>

            <div class="col-lg-6">
                @Html.DropDownListFor(model => model.DeptID, null, "** Select Depatment **", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DeptID, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-6">
                @Html.DropDownListFor(model => model.CouID, null, "** Select Course **", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CouID, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-4">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @placeholder = "Email" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-4">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @placeholder = "Password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-4">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @placeholder = "Phone" } })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-12">
                <center><button type="submit" class="c-btn ">REGISTER</button></center>
            </div>
        </div>
            }
        </div>
        <P>
            <h6 style="color: white;">NB:- Check your email for Registration ID. If you do not receive the confirmation message within a few minutes of registration, please check your SPAM Folder.</h6>
    </div>
    </P>
    </div>
    </div>
    </div>
</section>

