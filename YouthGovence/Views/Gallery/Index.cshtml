@model IEnumerable<YouthGovence.Models.ImageGallery>
@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg spad" data-setbg="/Image/about-bread2.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text ">
                    <h2>Gallery</h2>
                    <div class="breadcrumb-controls">
                        <a href="~/Home/index"><i class="fa fa-home"></i> Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb End -->
<!-- Gallery Section Begin -->
<section class="gallery-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

            </div>
        </div>
        <!-- gallery images -->
        <div class="row gallery-filter">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-sm-6 ">
                    <div class="gallery-item">
                        <img src="~/UploadImage/@item.ImgURL" alt="">

                        <div class="gi-hover-warp">
                            <div class="gi-hover">
                                <a href="~/UploadImage/@item.ImgURL" class="image-popup"><i class="fa fa-search-plus"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            </div>
    </div>
</section>
<!-- Gallery Section End -->